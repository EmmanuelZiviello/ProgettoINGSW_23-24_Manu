<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#66FFFF">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Clicca per aprire il menu."
            android:paddingLeft="10dp"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/nome_schermata"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/img_menu"
            android:text="Nome della schermata"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/nome_schermata"
            android:background="@drawable/rounded_background"
            android:drawableRight="@drawable/ic_search"
            android:hint="Cerca"
            android:textSize="30sp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:inputType="text"
            android:autofillHints="text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Clicca per aprire il menu."
            android:paddingRight="10dp"
            android:src="@drawable/ic_profilo" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consigliati per te"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="170dp"
                    android:contentDescription="Immagine"
                    android:src="@drawable/sfondoprova" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varie info sul prodotto"
                    android:textSize="20sp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="5dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="170dp"
                    android:contentDescription="Immagine"
                    android:src="@drawable/sfondoprova" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varie info sul prodotto"
                    android:textSize="20sp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="5dp"/>



            </LinearLayout>


            
        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Offerte in scadenza"
        android:textSize="28sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="170dp"
                    android:contentDescription="Immagine"
                    android:src="@drawable/sfondoprova" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varie info sul prodotto"
                    android:textSize="20sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="170dp"
                    android:contentDescription="Immagine"
                    android:src="@drawable/sfondoprova" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varie info sul prodotto"
                    android:textSize="20sp"/>



            </LinearLayout>



        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>

</LinearLayout>